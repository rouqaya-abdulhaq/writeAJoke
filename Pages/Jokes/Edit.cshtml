@page  "{id:int?}"
@model writeAJoke.Pages.Jokes.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="d-flex flex-column align-items-center">
    <h1>Edit</h1>
    <hr style="background-color: #f3c623;" />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Joke.ID" />
                <div class="form-group" style="width: 25vw;">
                    <label asp-for="Joke.Title" class="control-label"></label>
                    <input asp-for="Joke.Title" class="form-control" style="border: 2px solid #f3c623"/>
                    <span asp-validation-for="Joke.Title" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 75vw;">
                    <label asp-for="Joke.Body" class="control-label"></label>
                    <input asp-for="Joke.Body" class="form-control" style="border: 2px solid #f3c623"/>
                    <span asp-validation-for="Joke.Body" class="text-danger"></span>
                </div>
                <div class="form-group" style="width : 20vw;">
                    <label asp-for="Joke.Genre" class="control-label"></label>
                    <input asp-for="Joke.Genre" class="form-control" style="border: 2px solid #f3c623"/>
                    <span asp-validation-for="Joke.Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">
            <img src="~/images/back.png" alt="back"/>
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
