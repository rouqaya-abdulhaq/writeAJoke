@page "{id:int?}"
@model writeAJoke.Pages.Jokes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="d-flex flex-column align-items-center">
    <h3>Are you sure you want to delete this joke?</h3>
    <h4>be careful we won't give it back</h4>
    <div>
        <hr style="background-color: #f3c623;" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Joke.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Joke.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Joke.Body)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Joke.Body)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Joke.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Joke.Genre)
            </dd>
        </dl>
        
        <form method="post">
            <input type="hidden" asp-for="Joke.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">
                <img src="~/images/back.png" alt="back"/>
            </a>
        </form>
    </div>

</div>
