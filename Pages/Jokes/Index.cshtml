@page "{SearchString?}"
@model writeAJoke.Pages.Jokes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <select asp-for="JokeGenre" asp-items="Model.Genres">
        <option value="">All</option>
    </select>
    <p>
        Title : <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Joke[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joke[0].Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joke[0].Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Joke) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
